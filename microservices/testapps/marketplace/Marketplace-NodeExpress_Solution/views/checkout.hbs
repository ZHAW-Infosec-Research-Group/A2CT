<div id="header">
  <h1>Checkout</h1>
</div>

<div id="checkoutData">
  {{#if cartEmpty}}
    <p>Your cart is empty, so you cannot purchase anything.</p>
  {{else}}
  
  <p>Please provide the following information to complete your purchase:</p>

  <form action="/purchase" method='POST'>
    <table>
      <tr>
        <td>First name:</td>
        <td><input type="text" name="firstname"></td>
        <td class="redItalicText">{{ validationErrors.firstname.msg }}</td>
      </tr>
      <tr>
        <td>Last name:</td>
        <td><input type="text" name="lastname"></td>
        <td class="redItalicText">{{ validationErrors.lastname.msg }}</td>
      </tr>
      <tr>
        <td>Credit card number:</td>
        <td><input type="text" name="creditcardnumber"></td>
        <td class="redItalicText">{{ validationErrors.creditcardnumber.msg }}</td>
      </tr>
      <tr>
        <td></td>
        <td><input type="submit" value='Complete purchase' /></td>
      </tr>
    </table>
  </form>
  {{/if}}
</div>

<div id="navigation">
  <table>
    <tr>
      <td>
        <form action='/products' method="GET" >
          <input type="submit" value='Return to products page' />  
        </form>
      </td>
      <td>
        <form action='/cart' method="GET" >
          <input type="submit" value='Show cart' />  
        </form>
      </td>
    </tr>
  </table>
</div>